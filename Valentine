  <script>
    let noClicks = 0;

    const noTexts = [
      "No ğŸ™„",
      "Are you sure?",
      "Divyaniâ€¦ think again ğŸ˜Œ",
      "You really want to hurt me?",
      "I already told my mom ğŸ˜­",
      "This is getting awkward now",
      "Okay stop playing ğŸ˜",
      "Just press Yes â¤ï¸"
    ];

    function sayNo() {
      noClicks++;

      const yesBtn = document.getElementById("yesBtn");
      const noBtn = document.getElementById("noBtn");

      // Grow Yes button dramatically
      let size = parseFloat(window.getComputedStyle(yesBtn).fontSize);
      yesBtn.style.fontSize = (size + 8) + "px";
      yesBtn.style.padding = "22px 38px";

      // Update No text
      noBtn.innerText = noTexts[Math.min(noClicks, noTexts.length - 1)];

      // Eventually surrender
      if (noClicks >= 7) {
        noBtn.style.display = "none";
      }
    }

    function sayYes() {
      document.getElementById("main").style.display = "none";
      document.getElementById("celebrate").style.display = "block";
    }
